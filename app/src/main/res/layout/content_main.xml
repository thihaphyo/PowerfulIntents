<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_timer"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="Set Timer"
            android:backgroundTint="#5195ea"
            android:textAllCaps="false" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_calender"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_timer"
            android:layout_alignLeft="@+id/btn_timer"
            android:layout_alignRight="@+id/btn_timer"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:backgroundTint="#5195ea"
            android:text="Set Event"
            android:textAllCaps="false" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_video"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_calender"
            android:layout_alignLeft="@+id/btn_calender"
            android:layout_alignRight="@+id/btn_calender"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:backgroundTint="#5195ea"
            android:text="Capture Video"
            android:textAllCaps="false" />


        <android.support.design.button.MaterialButton
            android:id="@+id/btn_contact"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_video"
            android:layout_alignLeft="@+id/btn_calender"
            android:layout_alignRight="@+id/btn_calender"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:backgroundTint="#5195ea"
            android:text="Pick Contact"
            android:textAllCaps="false" />


        <android.support.design.button.MaterialButton
            android:id="@+id/btn_web"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_contact"
            android:layout_alignLeft="@+id/btn_timer"
            android:layout_alignRight="@+id/btn_timer"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="Search Web"
            android:backgroundTint="#5195ea"
            android:textAllCaps="false" />


    </RelativeLayout>

</ScrollView>
